<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp">
        <!-- Content added programmatically -->
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/left_button"
        android:gravity="left"
        android:layout_height="match_parent"
        android:layout_width="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:alpha="0.5"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_keyboard_arrow_left_black_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_button"
        android:gravity="right"
        android:layout_height="match_parent"
        android:layout_width="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:alpha="0.5"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/down_button"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="@dimen/up_down_button_padding"
            android:visibility="gone"
            android:background="@drawable/roundedbutton_red" >
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:background="@drawable/ic_arrow_downward_white_48dp">
            </View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/up_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="@dimen/up_down_button_padding"
            android:visibility="gone"
            android:background="@drawable/roundedbutton_green">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:background="@drawable/ic_arrow_upward_white_48dp">
            </View>
        </RelativeLayout>
    </LinearLayout>

